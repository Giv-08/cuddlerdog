<div>
  <div class="title-dogname">
    <h1>Welcome to <%= @dog.name %> page</h1>
    <div>
      <% if @dog.photo.attached? %>
        <%= cl_image_tag @dog.photo.key, width: 400, height: 300, crop: :fill %>
      <% else %>
        <p><%= @dog.name %> is shy and doesn't have a picture yetðŸ™ˆ</p>
      <% end %>
    </div>
  </div>

  <div class="body">
    <div class="body-doginfo">
      <p>Breed: <%= @dog.breed %> </p>
      <p>Cost: <%= @dog.price %></p>
    </div>
    <div class="description">
      <p>Little bit about our sweet <%= @dog.name %>, the <%= @dog.breed %> </p>
      <p> <%= @dog.description %> </p>
    </div>
  </div>
  <div class="footer">
        <%= link_to 'Main Page', dogs_path, class: 'btn btn-info' %>
        <%= link_to 'Edit', edit_dog_path(@dog), class: 'btn btn-info' %>
        <%= link_to "Delete", dog_path(@dog), data: {turbo_method: :delete, turbo_confirm: "Do you really want to delete #{ERB::Util.html_escape(@dog.name)}?"}, class: 'btn btn-secondary' %>
  </div>
</div>
